{
  "packages": [
    "nixos-shell@latest",
    "fd@latest"
  ],
  "shell": {
    "init_hook": [
      "mkdir -p artifacts"
    ],
    "scripts": {
      "build":      "bash ./scripts/build.sh",
      "container":  "nixos-shell -I nixpkgs=channel:nixpkgs-unstable",
      "gc":         "bash ./scripts/gc.sh",
      "preview":    "bash ./scripts/preview.sh"
    }
  }
}
